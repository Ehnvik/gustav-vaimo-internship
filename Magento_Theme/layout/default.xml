<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_width" xsi:type="number">185</argument>
            </arguments>
        </referenceBlock>

        <referenceContainer name="footer">
            <block name="custom.footer" template="Magento_Theme::custom_footer.phtml">
                <arguments>
                    <argument name="custom_footer_text" translate="true" xsi:type="string">My first footer text!</argument>
                    <argument name="new_custom_footer_text" translate="true" xsi:type="string">My second footer text!</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
